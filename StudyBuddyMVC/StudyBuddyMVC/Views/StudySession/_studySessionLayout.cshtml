@{
	Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
	<div class="col-10 mt-5"
		 style="
		 width: 100%;
		 height: 100%;
		 padding: 20px;
		 background: white;
		 border-radius: 4px;
		 box-shadow: 0 8px 16px rgba(0,0,0,.3);
		">
		<div class="d-grid gap-2 col-3 mx-auto">
			<div class="p-1" type="button" style="background:#005daa; border-radius: 10px; text-align: center; margin: 50px;"><a style="text-decoration:none;" href="~/StartSession"><h2 style="color:white;">Start Session</h2></a></div>
		</div>
		<div class="card">
			<div class="card-header">
				<ul class="nav nav-tabs card-header-tabs">
					<li class="nav-item">
						<a class="nav-link" href="~/MySession">
							My Session
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="~/StudyPriority">
							Study Priority
						</a>
					</li>
				</ul>
			</div>
			<div class="card-body">
				<div class="row justify-content-center">
					<div class="col-40 my-4">
						@RenderBody()
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts{
	@await RenderSectionAsync("Scripts", required: false)

	<script>
		// Function for tabs to show which one is active
		$(function () {
			const currentPage = location.pathname;
			$('.nav-tabs li a').each(function () {
				const $this = $(this);
				if (currentPage.toLowerCase().indexOf($this.attr('href').toLowerCase()) !== -1) {
					$this.addClass('active');
				}
			})
		})
	</script>
}
