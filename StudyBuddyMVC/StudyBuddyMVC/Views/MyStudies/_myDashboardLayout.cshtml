@{
    ViewData["Title"] = "MyDashboard";
    Layout = "~/Views/MyStudies/_myStudiesLayout.cshtml";
}

<h1>My Dashboard</h1>

<div class="row justify-content-center">
	<div class="col-10 mt-5"
		 style="
		 width: 100%;
		 height: 100%;
		 padding: 20px;
		 background: white;
		 border-radius: 4px;
		 box-shadow: 0 8px 16px rgba(0,0,0,.3);
		">
		<div class="card ">
			<div class="card-header">
				<ul class="nav nav-tabs card-header-tabs">
					<li class="nav-item">
						<a class="nav-link" href="/MyStats">
							Stats
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/MyHistory">
							History
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/Decks">
							StudyPriory
						</a>
					</li>
				</ul>
			</div>
			<div class="card-body">
				<div class="row justify-content-center">
					<div class="col-20 my-4">
						@RenderBody()
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts{
	@await RenderSectionAsync("Scripts", required: false)

	<script>
		// Function for tabs to show which one is active
		$(function () {
			const currentPage = location.pathname;
			$('.nav-tabs li a').each(function () {
				const $this = $(this);
				if (currentPage.toLowerCase().indexOf($this.attr('href').toLowerCase()) !== -1) {
					$this.addClass('active');
				}
			})
		})
	</script>
}

