@model ApiStudyBuddy.Models.FlashCard

@{
    ViewData["Title"] = "EditFlashCard";
    Layout = "~/Views/MyStudies/_studiesLayout.cshtml";
}

<h2>Update Flashcard</h2>
<div class="form-horizontal">
    <form method="post">
        <input type="hidden" asp-for="FlashCardId" />
        <input type="hidden" asp-for="IsPublic" value="@Model.IsPublic"/>
        <input type="hidden" asp-for="ReadOnly" value="@Model.ReadOnly" />
        <div asp-validation-summary="All"></div>
        <div class="form-group mb-3">
            <label>Flashcard Question</label>
            <input asp-for="FlashCardQuestion" class="form-control" />
            <span asp-validation-for="FlashCardQuestion"></span>
        </div>
        <br />
        <div class="form-group mb-3">
            <label>Flashcard Answer</label>
            <textarea class="form-control" asp-for="FlashCardAnswer"><br>></textarea>
            <span asp-validation-for="FlashCardAnswer"></span>
        </div>
        <p>
            <button type="submit" class="btn btn-primary" role="button">Save Changes</button>
            <input type="button" value="Cancel" class="btn btn-secondary" onclick="location.href='@Url.Action("Decks","MyStudies")';" />
        </p>
    </form>
</div>