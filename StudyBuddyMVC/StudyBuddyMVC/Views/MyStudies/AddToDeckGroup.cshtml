@model DeckGroupsViewModel

@{
    ViewData["Title"] = "AddToDeck";
    Layout = "~/Views/MyStudies/_studiesLayout.cshtml";
}

<h2 style="color: #005baa;">Add Deck to a Deckgroup</h2>
<br />
<body>
    <h4><b>@Model.Deck.DeckName</b></h4>
    <p>@Model.Deck.DeckDescription</p>
</body>
<br />

@using (Html.BeginForm("AddToDeckGroup", "MyStudies", FormMethod.Post))
{
    <div class="form-horizontal" size="3">
        <input type="hidden" asp-for="Deck.DeckId" />
        <h4 style="color: #005baa;">Choose a Deckgroup</h4>
        @Html.DropDownListFor(m=>m.DeckGroupId,new SelectList(Model.DeckGroups,"Value","Text"),new{@class="form-control"})
        <br />
        <br />
        @* <input type="submit" value="Submit" /> *@
        <button type="submit" class="btn btn-primary" role="button">Add to Deckgroup</button>
        <input type="button" value="Cancel" class="btn btn-secondary" onclick="location.href='@Url.Action("Decks","MyStudies")';" />
    </div>
} 