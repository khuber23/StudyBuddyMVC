@model IEnumerable<StudyBuddyMVC.Models.DeckGroupViewModel>

@{
    ViewData["Title"] = "DeckGroups";
    Layout = "~/Views/MyStudies/_myStudiesLayout.cshtml";
}

<div id="DeckGroup"></div>

<h1>DeckGroups</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeckGroupId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeckGroupName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeckGroupDescription)
            </th>
            <th style="font-weight:bold">
                @* @Html.ActionLink("Create a Deck Group","CreateDeckGroup") *@
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createDeckGroup" data-url="@Url.Action("CreateDeckGroup")">
                    Create a DeckGroup
                </button>
                <!-- Create new Deck Group -->
                <div class="modal fade" id="createDeckGroup" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form asp-action="CreateDeckGroup" id="AddDeckGroup" method="post">
                                <div class="modal-header bg-info">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add a Deckgroup.</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div>
                                        <label for="DeckGroupName">Deckgroup Name:</label>
                                        <input for="DeckGroupName" class="form-control" type="text" id="deckgroupName" aria-required="true" />
                                        <span for="DeckGroupName" class="text-danger"></span>
                                    </div>
                                    <div>
                                        <label for="DeckGroupDescription">Description:</label>
                                        <textarea for="DeckGroupDescription" class="form-control" rows="4" cols="50" id="deckgroupDescription" aria-required="true"></textarea>
                                        <span for="DeckGroupDescription" class="text-danger"></span><br><br />
                                    </div>
                                    <div>
                                        <input type="checkbox" id="makepublic" value="Bike">
                                        <label for="makepublic">Make it public</label><br>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createDeck">Add Deckgroup</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- Second Modal for creating Decks -->
                <div class="modal" id="createDeck" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form asp-action="CreateDeck" id="AddDeck" method="post">
                                <div class="modal-header bg-info">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add a Deck.</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div>
                                        <p>Add a deck to your deck group you just created.</p>
                                    </div>
                                    <div>
                                        <label for="deckgroupName">Deck Name:</label><br>
                                        <input class="form-control" type="text" id="deckName" />
                                    </div>
                                    <div>
                                        <label for="deckDescription">Description:</label><br>
                                        <textarea class="form-control" rows="4" cols="50" id="deckDescription"></textarea><br><br />
                                    </div>
                                    <div>
                                        <input type="checkbox" id="makepublic">
                                        <label for="makepublic">Make it public</label><br>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Back</button>
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createFlashcard">Add Deck</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- Second Modal for creating FlashCards -->
                <div class="modal" id="createFlashcard" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form asp-action="CreateFlashCard" id="AddDeck" method="post">
                                <div class="modal-header bg-info">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add a Deck.</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div>
                                        <p>Add some flash cards to your deck.</p>
                                    </div>
                                    <div>
                                        <label for="flashcardQuestion">Flashcard Question:</label><br>
                                        <input class="form-control" type="text" id="flashcardQuestion" />
                                    </div>
                                    <div>
                                        <label for="flashcardAnswer">Answer:</label><br>
                                        <textarea class="form-control" rows="4" cols="50" id="flashcardAnswer"></textarea><br><br />
                                    </div>
                                    <div>
                                        <input type="checkbox" id="makepublic" value="Bike">
                                        <label for="makepublic">Make it public</label><br>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Back</button>
                                    <button type="button" class="btn btn-primary">Finished</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </th>
        </tr>
        @foreach (var item in Model)
        {
              <tr>
                   <td>
                        @Html.DisplayFor(modelItem => item.DeckGroupId)
                   </td>
                   <td>
                        @Html.DisplayFor(modelItem => item.DeckGroupName)
                   </td>
                   <td>
                        @Html.DisplayFor(modelItem => item.DeckGroupDescription)
                   </td>
                   <td>
                        @* @Html.ActionLink("Edit", "Edit", new {id=item.DeckGroupId}) *@
                    <button type="button" class="btn btn-primary" onclick="@item.DeckGroupId" data-bs-toggle="modal" data-bs-target="#EditBackdrop">
                        Edit
                    </button>

                    <!-- Edit -->
                    <div class="modal fade" id="EditBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="EditDeckGroup" id="EditDeckGroup" method="post">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="staticBackdropLabel">Edit</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            
                                            <label asp-for="@item.DeckGroupName" class="control-label"></label>
                                            <input class="updateDeckGroup" asp-for="@item.DeckGroupId"><br>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">Save Changes</button>
                                    </div>
                                </form>>                 
                            </div>
                        </div>
                    </div>  |
                        @* @Html.ActionLink("Details", "Details", new {id=item.DeckGroupId} ) *@ 
                        @* @Html.ActionLink("Delete", "Delete", new {id=item.DeckGroupId}) *@
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#detailBackdrop">
                        Details
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="detailBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Information about Deck group</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div>
                                        <p>
                                            @Html.DisplayFor(modelItem => item.DeckGroupName)
                                        </p>
                                    </div>
                                    <div>
                                        <p>
                                            @Html.DisplayFor(modelItem => item.DeckGroupDescription)
                                        </p>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">More</button>
                                </div>
                            </div>
                        </div>
                    </div> |

                    <button type="button" class="btn btn-danger" onclick="@item.DeckGroupId" data-bs-toggle="modal" data-bs-target="#DeleteBackdrop">
                        Delete
                    </button>

                    <!-- Delete -->
                    <div class="modal fade" id="DeleteBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Deleting Deck Group</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                   <h2>Are you sure you want to delete this Deckgroup?</h2>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-danger">Delete</button>
                                </div>
                            </div>
                        </div>
                   </td>
             </tr>
        }
    </thead>
</table>