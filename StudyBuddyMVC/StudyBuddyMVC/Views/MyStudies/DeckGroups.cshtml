@using ApiStudyBuddy.Models;
@model IEnumerable<ApiStudyBuddy.Models.DeckGroup>

@{
    ViewData["Title"] = "DeckGroups";
    Layout = "~/Views/MyStudies/_myStudiesLayout.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

@{
    await Html.RenderPartialAsync("_CreateDeckGroup", new DeckGroup());
    await Html.RenderPartialAsync("_CreateDeck", new Deck()); 
    await Html.RenderPartialAsync("DeckGroupDeck", new DeckGroupDeck());
}

<h1>DeckGroups</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeckGroupId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeckGroupName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeckGroupDescription)
            </th>
            <th style="font-weight:bold">
               
                <button id="create-deck-group-btn" type="button" class="btn btn-primary" data-toggle="modal">
                    Create a DeckGroup
                </button>
                <!-- Second Modal for creating Decks -->
               
                <!-- Second Modal for creating FlashCards -->
                <div class="modal" id="createFlashcard" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form asp-action="CreateFlashCard" id="AddDeck" method="post">
                                <div class="modal-header bg-info">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add a Deck.</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div>
                                        <p>Add some flash cards to your deck.</p>
                                    </div>
                                    <div>
                                        <label for="flashcardQuestion">Flashcard Question:</label><br>
                                        <input class="form-control" type="text" id="flashcardQuestion" />
                                    </div>
                                    <div>
                                        <label for="flashcardAnswer">Answer:</label><br>
                                        <textarea class="form-control" rows="4" cols="50" id="flashcardAnswer"></textarea><br><br />
                                    </div>
                                    <div>
                                        <input type="checkbox" id="makepublic" value="Bike">
                                        <label for="makepublic">Make it public</label><br>
                                    </div>
                                    <div>
                                        <input type="radio" id="readOnly" />
                                        <label for="ReadOnly">Read Only</label>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Back</button>
                                    <button type="button" class="btn btn-primary">Finished</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </th>
        </tr>
        @foreach (var item in Model)
        {
              <tr>
                   <td>
                        @Html.DisplayFor(modelItem => item.DeckGroupId)
                   </td>
                   <td>
                        @Html.DisplayFor(modelItem => item.DeckGroupName)
                   </td>
                   <td>
                        @Html.DisplayFor(modelItem => item.DeckGroupDescription)
                   </td>
                   <td>
                        @* @Html.ActionLink("Edit", "Edit", new {id=item.DeckGroupId}) *@
                    <button type="button" class="btn btn-primary" onclick="@item.DeckGroupId" data-bs-toggle="modal" data-bs-target="@("#EditDeckGroup-"+ @item.DeckGroupId)">
                        Edit
                    </button>

                    <!-- Edit -->
                    <div class="modal fade" id="EditDeckGroup-@item.DeckGroupId" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="EditDeckGroup" asp-controller="MyStudies" method="post">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="staticBackdropLabel">Edit Deckgroup</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <input type="hidden" asp-for="@item.DeckGroupId"/>
                                            <label asp-for="@item.DeckGroupName" class="control-label"></label>
                                            <input class="form-control" asp-for="@item.DeckGroupName"><br>
                                            <span asp-validation-for="@item.DeckGroupName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@item.DeckGroupDescription" class="control-label"></label>
                                            <textarea class ="form-control" asp-for="@item.DeckGroupDescription"><br>></textarea>
                                            <span asp-validation-for="@item.DeckGroupDescription" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                    </div>
                                </form>>                 
                            </div>
                        </div>
                    </div>  |
                        @* @Html.ActionLink("Details", "Details", new {id=item.DeckGroupId} ) *@ 
                        @* @Html.ActionLink("Delete", "Delete", new {id=item.DeckGroupId}) *@
                    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#detailBackdrop">
                        Details
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="detailBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="staticBackdropLabel">Information about Deck group</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div>
                                            <p>
                                                @Html.DisplayFor(modelItem => item.DeckGroupName)
                                            </p>
                                        </div>
                                        <div>
                                            <p>
                                                @Html.DisplayFor(modelItem => item.DeckGroupDescription)
                                            </p>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="button" id="createDeck-btn" class="btn btn-primary">Create a Deck</button>
                                        @* <button type="button" class="btn btn-primary" data-bs-target="modal" >Create a Deck</button> *@
                                    </div>
                            </div>
                        </div>
                    </div> |

                    <button type="button" class="btn btn-danger" onclick="@item.DeckGroupId" data-bs-toggle="modal" data-bs-target="#DeleteBackdrop">
                        Delete
                    </button>

                    <!-- Delete -->
                    <div class="modal fade" id="DeleteBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="DeleteDeckGroup" asp-controller="MyStudies" method="post">
                                    <div class="modal-header bg-warning">
                                        <h1 class="modal-title fs-5" id="staticBackdropLabel">Deleting Deck Group</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <h2>Are you sure you want to delete this Deckgroup?</h2>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                   </td>
             </tr>
        }
    </thead>
</table>


@section scripts {
    <script>
        $("#create-deck-group-btn").click(function () {
            $("#createDeckGroup-modal").modal('show');
        });
        // $("#create-deck-inner-btn").click(function () {
        //     $("#createDeckGroupDeck-modal").modal('show');
        // });

        $("#create-deck-inner-btn").click(function () {
            $("#createDeckGroup-modal").modal('hide');
            $("#createDeckGroupDeck-modal").modal('show');
        });
    </script>
}
