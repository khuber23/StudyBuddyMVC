@model ApiStudyBuddy.Models.FlashCard

<div class="modal fade" id="createFlashCard-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateFlashCard" asp-controller="MyStudies" id="AddFlashCard" method="post">
                <div class="modal-header bg-info">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add a Flashcard</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div>
                        <label asp-for="FlashCardQuestion" class="forrm-label">Flashcard Question:</label>
                        <input asp-for="FlashCardQuestion" class="form-control" type="text" id="flashCardName" aria-required="true" />
                        <span asp-validation-for="FlashCardQuestion" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="FlashCardAnswer">Answer:</label>
                        <textarea asp-for="FlashCardAnswer" class="form-control" rows="4" cols="50" id="flashcardAnswer" aria-required="true"></textarea>
                        <span asp-validation-for="FlashCardAnswer" class="text-danger"></span><br><br />
                    </div>
                    <div>
                        <input asp-for="IsPublic" data-val="true" type="checkbox" id="makepublic" value="True">
                        <input asp-for="IsPublic" type="hidden" id="makepublic" value="False">
                        <label asp-for="IsPublic">Make it public</label><br>
                    </div>
                    <div>
                        <div class="col-md-10">
                            <label>Read Only</label>
                            <label asp-for="ReadOnly">Yes</label>
                            <input asp-for="ReadOnly" type="radio" id="yes" value="True" />
                            <span asp-validation-for="ReadOnly" class="text-danger"></span>
                            <label asp-for="ReadOnly">No</label>
                            <input asp-for="ReadOnly" type="radio" id="no" value="False" />
                            <span asp-validation-for="ReadOnly" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" data-bs-toggle="modal">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>