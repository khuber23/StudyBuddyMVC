<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NtcMaui.Views.SignAndCreate.Success"
             Title="Success">
    <ScrollView>
        <Grid>
            <StackLayout Margin="0,10">
                <StackLayout>
                    <Label HorizontalOptions="Center" Text="Filler image for user profile for the moment. Will eventually be whatever user is logged in"></Label>
                    <Image x:Name="UserImage"  WidthRequest="100" HeightRequest="100" Source="stockprofileimage.png"></Image>
                    <Label HorizontalOptions="Center" Text="Hello User! Welcome!"></Label>
                </StackLayout>
                <StackLayout Margin="0, 60">
                    <Image WidthRequest="400" HeightRequest="400" Source="green_checkmark.jpg"></Image>
                </StackLayout>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>